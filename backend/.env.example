# ============================================
# FILE 2: backend/.env.example
# ============================================

# Application
APP_NAME=cung-ban-lang-nghe-api
APP_VERSION=1.0.0
DEBUG=true
ENVIRONMENT=development

# Server
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1

# Database (Supabase PostgreSQL)
DATABASE_URL=postgresql://user:password@db.xxxxx.supabase.co:5432/postgres
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# Redis Cache (Redis Labs)
REDIS_URL=redis://default:password@redis-xxxxx.cloud.redislabs.com:xxxxx
REDIS_TTL=3600
REDIS_MAX_CONNECTIONS=10

# Security
SECRET_KEY=your-secret-key-minimum-32-characters-long-change-this
JWT_ALGORITHM=HS256
JWT_EXPIRATION=3600
ENCRYPTION_KEY=32-byte-encryption-key-for-aes-256

# Session
SESSION_TIMEOUT=2592000

# AI Services
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxx
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.7

AI_ENGINE_URL=http://localhost:8001

# Crisis Detection
CRISIS_DETECTION_THRESHOLD=0.85
EMERGENCY_HOTLINE=111
ENABLE_EXPERT_MONITORING=false

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
CORS_CREDENTIALS=true

# Monitoring
GRAFANA_API_KEY=your-grafana-api-key
GRAFANA_INSTANCE_URL=https://your-instance.grafana.net
PROMETHEUS_PORT=9090

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json